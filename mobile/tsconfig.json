{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ES2019", "ES2020.Promise"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src mobile/*"],
      "@components/*": ["./src mobile/components/*"],
      "@screens/*": ["./src mobile/screens/*"],
      "@services/*": ["./src mobile/services/*"],
      "@utils/*": ["./src mobile/utils/*"],
      "@types/*": ["./src mobile/types/*"],
      "@config/*": ["./src mobile/config/*"],
      "@store/*": ["./src mobile/store/*"],
      "@navigation/*": ["./src mobile/navigation/*"]
    }
  },
  "include": [
    "src mobile/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "android",
    "ios"
  ]
}