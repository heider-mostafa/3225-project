{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "ES2019",
      "ES2020.Promise",
      "DOM"
    ],
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@mobile/*": [
        "./src/*"
      ],
      "@shared-types/*": [
        "../types/*"
      ],
      "@shared-lib/*": [
        "../lib/*"
      ],
      "@shared-components/*": [
        "../components/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "../node_modules",
    "../.next",
    "../out"
  ],
  "extends": "expo/tsconfig.base"
}
